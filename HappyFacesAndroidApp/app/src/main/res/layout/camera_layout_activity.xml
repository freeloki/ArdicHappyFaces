<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- Camera Preview and Profile Info Layout Start -->
    <LinearLayout
        android:id="@+id/cameraGroupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- Camera Preview Start -->

        <LinearLayout
            android:id="@+id/cameraPreviewLinearLayout"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ardic.android.happyfaces.camera.CameraSourcePreview
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.ardic.android.happyfaces.camera.GraphicOverlay
                    android:id="@+id/faceOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.ardic.android.happyfaces.camera.CameraSourcePreview>


        </LinearLayout>

        <!-- Camera Preview End -->

        <!-- Profile Preview Start -->

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nmf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/humf"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/detectResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@android:color/holo_orange_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:text="detection resulrt" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/profilephoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="TODO"
                        android:src="@drawable/app_icon" />

                    <TextView
                        android:id="@+id/FaceColortextView"
                        android:layout_width="wrap_content"
                        android:layout_height="161dp"
                        android:layout_weight="1"
                        android:text="TextView" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <!-- Profile Preview End -->


    </LinearLayout>

    <!-- Camera Preview and Profile Info Layout End -->


    <!-- Infomation Layout Start -->

    <!-- Information Layout End -->
</LinearLayout>