<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <!-- Camera Preview and Profile Info Layout Start -->
    <LinearLayout
        android:id="@+id/cameraGroupLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <!-- Camera Preview Start -->

        <LinearLayout
            android:id="@+id/cameraPreviewLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.ardic.android.happyfaces.camera.CameraSourcePreview
                android:id="@+id/preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <com.ardic.android.happyfaces.camera.GraphicOverlay
                    android:id="@+id/faceOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </com.ardic.android.happyfaces.camera.CameraSourcePreview>


        </LinearLayout>

        <!-- Camera Preview End -->

        <!-- Profile Preview Start -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="HUMF"
                android:textSize="30sp" />


        </LinearLayout>

        <!-- Profile Preview End -->


    </LinearLayout>

    <!-- Camera Preview and Profile Info Layout End -->


    <!-- Infomation Layout Start -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1">


    </LinearLayout>

    <!-- Information Layout End -->
</LinearLayout>